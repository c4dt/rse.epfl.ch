{
  "packages": [
    "git@latest",
    "vim@latest",
    "less@latest",
    "hugo@latest",
    "openssh@latest",
    "linkchecker@latest",
    "rclone@latest"
  ],
  "shell": {
    "init_hook": [
      "if [ ! -f themes/anake/theme.toml ]; then git submodule init && git submodule update; fi",
      "echo 'Welcome to devbox!' > /dev/null",
      "alias ls='ls --color'",
      "alias ll='ls -l --color'"
    ],
    "scripts": {
      "hugo": [
        "hugo $@"
      ],
      "server": [
        "hugo server -D"
      ],
      "update": [
        "git pull",
        "hugo",
        "rclone copy public/ ic-ftps:/rse.epfl.ch/"
      ]
    }
  }
}
